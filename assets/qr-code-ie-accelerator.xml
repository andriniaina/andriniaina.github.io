<?xml version="1.0" encoding="utf-8"?>
<os:openServiceDescription xmlns:os="http://www.microsoft.com/schemas/openservicedescription/1.0">
	<os:homepageUrl>http://chart.apis.google.com</os:homepageUrl>
	<os:display>
		<os:name>QR encode</os:name>
		<os:icon>http://www.qrstuff.com/favicon.ico</os:icon>
		<os:description>Generate a QR code for the target link</os:description>
	</os:display>
	<os:activity category="Share">
		<os:activityAction context="link">
			<os:execute action="http://chart.apis.google.com/chart" method="get" >
				<os:parameter name="cht" value="qr" type="text" />
				<os:parameter name="chs" value="500x500" type="text" />
				<os:parameter name="choe" value="ISO-8859-1" type="text" />
				<os:parameter name="chld" value="H" type="text" />
				<os:parameter name="chl" value="{link}" type="text" />
			</os:execute>
		</os:activityAction>
		<os:activityAction context="selection">
			<os:execute action="http://chart.apis.google.com/chart" method="get" >
				<os:parameter name="cht" value="qr" type="text" />
				<os:parameter name="chs" value="500x500" type="text" />
				<os:parameter name="choe" value="UTF-8" type="text" />
				<os:parameter name="chld" value="H" type="text" />
				<os:parameter name="chl" value="{selection}" type="text" />
			</os:execute>
		</os:activityAction>

